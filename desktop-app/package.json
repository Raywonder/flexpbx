{
  "name": "flexpbx-desktop",
  "version": "1.0.0",
  "description": "FlexPBX Desktop Client - Manage local and remote PBX installations",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "node scripts/dev.js",
    "build": "node scripts/build.js",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "npm run build",
    "test": "echo \"No tests specified\" && exit 0",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rm -rf dist build node_modules/.cache"
  },
  "keywords": [
    "pbx",
    "voip",
    "electron",
    "desktop",
    "accessibility",
    "macos"
  ],
  "author": "FlexPBX Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "@electron/notarize": "^2.1.0",
    "chokidar": "^3.5.3"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "node-ssh": "^13.1.0",
    "basic-ftp": "^5.0.3",
    "webdav": "^5.3.0",
    "dockerode": "^4.0.0",
    "fs-extra": "^11.1.1",
    "axios": "^1.5.0",
    "tar": "^6.2.0",
    "which": "^4.0.0",
    "sudo-prompt": "^9.2.1",
    "node-forge": "^1.3.1"
  },
  "build": {
    "appId": "com.flexpbx.desktop",
    "productName": "FlexPBX Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "resources/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.business",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.plist"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "zip",
          "arch": ["x64", "ia32"]
        }
      ],
      "publisherName": "FlexPBX Team",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": "AppImage"
    },
    "afterSign": "scripts/notarize.js"
  }
}